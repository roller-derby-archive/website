{% extends 'base.html.twig' %}

{% block body %}
    <main class="rda-page">
        <div class="rda-title-bar">
            <h1>{{ club.name }}{% if club.closedAt != null %} ☠️{% endif %}</h1>
        </div>
        <div class="rda-club-view-content rda-content">
            {{ include('club/_info_box.html.twig', {club: club}) }}
            <section class="rda-club-view-history">
                <h2>Présentation</h2>
                {{ club.overview }}
           </section>
            <section>
                <h2>Histoire</h2>
                {{ club.history }}
            </section>
        </div>
    </main>
{% endblock %}
